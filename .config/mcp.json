{
  "mcpServers": {
    "cloudbees-unify": {
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-i",
        "--env=CLOUDBEES_PERSONAL_ACCESS_TOKEN",
        "cloudbees/unify-mcp-server:latest",
        "stdio",
        "--mode=unify",
        "--organization-id=${{ secrets.ORGANIZATION_ID }}"
      ],
      "env": {
        "CLOUDBEES_PERSONAL_ACCESS_TOKEN": "${{ secrets.CLOUDBEES_PERSONAL_ACCESS_TOKEN }}"
      }
    }
  }
}

